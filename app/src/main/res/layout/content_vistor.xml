<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/home_bg"
    android:padding="12dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="apps.kelvin.makau.scannerapp.Vistor"
    tools:showIn="@layout/activity_vistor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#9affffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:id="@+id/take_pic"
                android:src="@drawable/icon"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:text="fddfvs"

                android:id="@+id/serialTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:id="@+id/id_noTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:id="@+id/namesTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:id="@+id/sexTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="gone"
                android:id="@+id/dobTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="gone"
                android:id="@+id/doiTV"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="gone"

                android:id="@+id/mrzTV"

                android:textColor="@color/material_green_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="visible"
                android:id="@+id/edt_office"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="visible"
                android:id="@+id/edt_car"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:padding="6dp"
                android:visibility="visible"
                android:id="@+id/edt_vist"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Spinner

                android:entries="@array/visit"
                android:visibility="gone"
                android:id="@+id/spinner_visit_type"

                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:onClick="checkOut"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="6dp"
        android:padding="12dp"
        android:text="Check Out"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
